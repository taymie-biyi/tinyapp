<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="row">
      <% if (user) { %>
        <div class="col-auto mt-2">
          Logged in as: <%= user.email %>!!
        </div>
          <form method="POST" action="/logout" class="form-inline">
            <button class="btn btn-outline-dark my-2 my-sm-0" value="Logout" type="submit">Logout</button>
          </form>
        </div>
        <div class="col-auto">
      <% } else { %>
        <form method="POST" action="/login" class="form-inline">
          <input type="text" name="email" class="form-control mr-sm-2" placeholder="Email">
          <input type="password" name="password" class="form-control mr-sm-2" placeholder="Password">
          <button class="btn btn-outline-dark mr-2" type="submit">Login</button>
        </form>
        <form method="GET" action="/register" class="form-inline">
          <button class="btn btn-outline-dark mr-4" type="submit">Register</button>
        </form>
      <% } %>      
    </div>
  </nav>
</header>